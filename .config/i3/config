# Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Keyboard Brightness
bindsym XF86KbdLightOnOff exec --no-startup-id brightnessctl --device='rgb:kbd_backlight' set 0
bindsym XF86KbdBrightnessDown exec --no-startup-id brightnessctl --device='rgb:kbd_backlight' set 10%-
bindsym XF86KbdBrightnessUp exec --no-startup-id brightnessctl --device='rgb:kbd_backlight' set 10%+

# Display Brightness
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=2 -q set 5%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 5%+

# Touchpad Toggle
bindsym XF86TouchpadToggle exec --no-startup-id /home/sy/.utils/toggle_touchpad.sh

# Screenshots
bindsym $mod+p exec --no-startup-id maim -o --select "$HOME/Pictures/screenshots/$(date).png"
bindsym Shift+$mod+p exec --no-startup-id maim -o --select | xclip -selection clipboard -t image/png

# Keyboard Layout Switch
bindsym $mod+space exec --no-startup-id xkb-switch -n && pkill -RTMIN+12 i3blocks

# Resize Mode
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# Configuration Management
