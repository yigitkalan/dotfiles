# General Settings
###############################################################################
set $mod Mod4

# Font for window titles and bar (unless overridden in bar block)
font pango:FiraCode Nerd Font Medium 10

# Hide edge borders and set gaps
hide_edge_borders both
gaps inner 0

# Smart borders and default border styles
smart_borders on
smart_borders no_gaps
default_border pixel 2
default_floating_border pixel 2

# Modifier for dragging floating windows
floating_modifier $mod

# Enable drag-to-move for tiling windows
tiling_drag modifier titlebar

###############################################################################
# Startup Applications
###############################################################################
# Start XDG autostart .desktop files
exec --no-startup-id dex --autostart --environment i3

# Clipboard manager
exec --no-startup-id greenclip daemon >/dev/null

# Screen lock and suspend
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork --color=#111111

# Polkit agent for GUI password popups
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# NetworkManager applet
exec --no-startup-id nm-applet

