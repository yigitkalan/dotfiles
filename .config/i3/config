    tray_output primary
    colors {
        background #222222
        statusline #bbbbbb
        separator  #666666

        focused_workspace  #4c7899 #285577 #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #222222 #222222 #888888
        urgent_workspace   #2f343a #900000 #ffffff
    }
}
