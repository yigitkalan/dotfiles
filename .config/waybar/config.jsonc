{
    "layer": "bottom",
    "modules-left": [
        "custom/launcher",
        "custom/updates",
        "hyprland/window",
        "tray"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "backlight",
        "pulseaudio",
        "battery",
        "hyprland/language",
        "memory",
        "network",
        "clock",
        "custom/powermenu"
    ],
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon}Ôäî {volume}%",
        "format-muted": "Óª® 0%",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "phone-muted": "Ó¥ó",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "scroll-step": 1,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-right": "pavucontrol",
        "ignored-sinks": [
            "Easy Effects Sink"
        ]
    },
    "network": {
        "format": "{ifname}",
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "Û∞àÄ eth",
        "format-disconnected": "", //An empty format will hide the module.
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname} Û∞àÄ",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 8
    },
    "backlight": {
        "tooltip": false,
        "format": "ÔÉ´ {}%",
        "interval": 1,
        "on-scroll-up": "brightnessctl  -q set 5%+",
        "on-scroll-down": "brightnessctl --min-val=2 -q set 5%-"
    },
    "battery": {
        "states": {
            "full": 99,
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time}",
        "format-full": "{icon} 100%",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10,
        "show-passive-items": true
    },
    "clock": {
        "format": "ÔÄó {:%H:%M}",
        "format-alt": "{:%A, %B %d, %Y (%R)}",
        "tooltip": true,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "left",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode"
            // "on-scroll-up": "shift_up",
            // "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "interval": 10,
        "format": "Ôãõ {}% ",
        "max-length": 10
    },
    "memory": {
        "interval": 30,
        "format": "ÔÉâ {}%",
        "max-length": 10
    },
    "custom/launcher": {
        "format": "ÔåÉ",
        "on-click": "rofi -show drun",
        "tooltip": true,
        "tooltip-format": "Launcher"
    },
    "custom/powermenu": {
        "format": "ÔÄë",
        "on-click": "wlogout",
        "tooltip": false
    },
    "hyprland/window": {
        "format": "{class}",
        "separate-outputs": true,
        "icon": true,
        "max-length": 30
    },
    "hyprland/language": {
        "format": "Û∞åå {}",
        "format-en": "EN",
        "format-tr": "TR"
        // "format-en": "üá¨üáß",
        // "format-tr": "üáπüá∑"
    },
    "custom/updates": {
        "format": "{} {icon}",
        "return-type": "json",
        "format-icons": {
            "has-updates": "Û±ç∑",
            "updated": "Û∞Ç™"
        },
        "exec-if": "which waybar-module-pacman-updates",
        "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
    }
}
